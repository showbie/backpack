{
  "name": "@showbie/backpack",
  "private": true,
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "changelog": "lerna-changelog",
    "changeset": "changeset",
    "format": "prettier",
    "lerna": "lerna",
    "release": "changeset publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn bootstrap && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "package.json": "prettier --write"
  },
  "prettier": {
    "singleQuote": true
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.0",
    "@changesets/cli": "2.16.0",
    "@showbie/eslint-config": "1.1.x",
    "@typescript-eslint/eslint-plugin": "2.18.x",
    "@typescript-eslint/parser": "2.20.x",
    "eslint": "6.8.x",
    "eslint-plugin-react": "7.20.x",
    "husky": "4.2.x",
    "import-sort-style-python": "1.0.2",
    "lerna": "4.0.0",
    "lerna-changelog": "1.0.x",
    "lint-staged": "10.0.x",
    "prettier": "2.3.2",
    "prettier-plugin-import-sort": "0.0.7",
    "prettier-plugin-packagejson": "2.2.11"
  },
  "changelog": {
    "repo": "showbie/backpack",
    "labels": {
      "breaking": "ğŸ’£ Breaking Change",
      "removed": "ğŸ—‘ï¸ Removed",
      "deprecated": "ğŸšš Deprecated",
      "changed": "â™»ï¸ Changed",
      "added": "ğŸ Added",
      "fixed": "ğŸ› Fixed",
      "security": "ğŸ”’ Security"
    }
  },
  "importSort": {
    ".js,.jsx,.ts,.tsx": {
