{
  "name": "backpack-root",
  "private": true,
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "changelog": "lerna-changelog",
    "changeset": "changeset add",
    "format": "prettier",
    "release": "lerna run build && changeset publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn bootstrap && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "package.json": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  },
  "dependencies": {
    "@changesets/changelog-github": "0.2.7",
    "@changesets/cli": "2.10.x",
    "@showbie/eslint-config": "2.0.x",
    "@typescript-eslint/eslint-plugin": "4.4.x",
    "@typescript-eslint/parser": "4.4.x",
    "eslint": "7.10.x",
    "eslint-plugin-jest": "24.1.x",
    "eslint-plugin-jest-dom": "3.2.x",
    "eslint-plugin-react": "7.21.x",
    "eslint-plugin-react-hooks": "4.1.x",
    "husky": "4.3.x",
    "import-sort-style-python": "1.0.x",
    "lerna": "3.22.x",
    "lerna-changelog": "1.0.x",
    "lint-staged": "10.4.x",
    "prettier": "2.1.x",
    "prettier-plugin-import-sort": "0.0.6",
    "prettier-plugin-packagejson": "2.2.x"
  },
  "changelog": {
    "repo": "showbie/backpack",
    "labels": {
      "breaking": "💣 Breaking Change",
      "removed": "🗑️ Removed",
      "deprecated": "🚚 Deprecated",
      "changed": "♻️ Changed",
      "added": "🎁 Added",
      "fixed": "🐛 Fixed",
      "security": "🔒 Security"
    }
  },
  "importSort": {
    ".js,.jsx": {
      "parser": "babylon",
      "style": "python",
      "options": {
        "knownFramework": [
          "react",
          "react-dom"
        ]
      }
    },
    ".ts,.tsx": {
      "parser": "typescript",
      "style": "python",
      "options": {
        "knownFramework": [
          "react",
          "react-dom"
        ]
      }
    }
  }
}
