{
  "name": "backpack-root",
  "private": true,
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "changelog": "lerna-changelog",
    "changeset": "changeset add",
    "docs:build": "vuepress build docs",
    "docs:dev": "vuepress dev docs",
    "format": "prettier",
    "release": "changeset publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn bootstrap && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "package.json": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "@changesets/cli": "2.9.2",
    "@showbie/backpack-tokens": "2.6.x",
    "@showbie/eslint-config": "1.1.x",
    "@tailwindcss/typography": "0.2.0",
    "@typescript-eslint/eslint-plugin": "2.18.x",
    "@typescript-eslint/parser": "2.20.x",
    "eslint": "6.8.x",
    "eslint-plugin-react": "7.20.x",
    "eslint-plugin-vue": "7.0.0-beta.2",
    "husky": "4.2.x",
    "import-sort-style-python": "1.0.x",
    "lerna": "3.20.x",
    "lerna-changelog": "1.0.x",
    "lint-staged": "10.0.x",
    "prettier": "1.19.x",
    "prettier-plugin-packagejson": "2.1.x",
    "tailwind-capsize": "1.0.1",
    "tailwindcss": "1.7.x",
    "vuepress": "1.5.x"
  },
  "changelog": {
    "repo": "showbie/backpack",
    "labels": {
      "breaking": "ğŸ’£ Breaking Change",
      "removed": "ğŸ—‘ï¸ Removed",
      "deprecated": "ğŸšš Deprecated",
      "changed": "â™»ï¸ Changed",
      "added": "ğŸ Added",
      "fixed": "ğŸ› Fixed",
      "security": "ğŸ”’ Security"
    }
  },
  "importSort": {
    ".js,.jsx": {
      "parser": "babylon",
      "style": "python",
      "options": {
        "knownFramework": [
          "react",
          "react-dom"
        ]
      }
    },
    ".ts,.tsx": {
      "parser": "typescript",
      "style": "python",
      "options": {
        "knownFramework": [
          "react",
          "react-dom"
        ]
      }
    }
  }
}
